    "scripts": {
        "installation": {
            "script": "#!/bin/bash\n# Nanos World Bleeding Edge Installation Script\n\napt update\napt -y install curl lib32gcc-s1 ca-certificates\n\n# Install SteamCMD\ncd /tmp\ncurl -sSL -o steamcmd_linux.tar.gz https://steamcdn-a.akamaihd.net/client/installer/steamcmd_linux.tar.gz\nmkdir -p /mnt/server/steamcmd\ntar -xzvf steamcmd_linux.tar.gz -C /mnt/server/steamcmd\n\n# Install Nanos World Server Bleeding Edge\ncd /mnt/server/steamcmd\n./steamcmd.sh +force_install_dir /mnt/server +login anonymous +app_update 1936830 -beta bleeding-edge validate +quit\n\n# Ensure permissions\nchmod +x /mnt/server/NanosWorldServer.sh\nchmod +x /mnt/server/NanosWorldServer\n\n# Create directories\nmkdir -p /mnt/server/Packages\nmkdir -p /mnt/server/Assets\nmkdir -p /mnt/server/Logs\n\n# Create default Config.toml\ncat <<EOF > /mnt/server/Config.toml\n[network]\nport = 7777\nquery_port = 7778\nannounce = true\n\n[general]\nname = \"Nanos World Server\"\ndescription = \"Bleeding Edge Server\"\nmax_players = 32\npassword = \"\"\n\n[game]\nmap = \"default-testing-map\"\ngame_mode = \"\"\npackages = []\nassets = []\n\n[debug]\nlog_level = 1\nEOF\n\necho \"Installation complete!\"",
            "container": "ghcr.io/parkervcp/installers:debian",
            "entrypoint": "bash"
        }
    },
